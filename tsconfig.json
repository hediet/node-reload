{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "rootDir": "./src",
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "newLine": "LF",
        "sourceMap": true,
        "useDefineForClassFields": false,
    },
    "include": ["./src/**/*", "./src/types.d.ts", "./node_modules/@types/node/fs.d.ts"]
}
